package Pacote_Fruta;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;

import Pacote_Fruta.Cliente;
import Pacote_Fruta.Fruta;

/**
 * Servlet implementation class Fruta
 */
@WebServlet("/frutaservlet.do")
public class FrutaServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
	private List<Fruta> frutasDisponiveis;
    private List<Cliente> clientes;
  

    @Override
    public void init() throws ServletException {
        frutasDisponiveis = new ArrayList<>();
        frutasDisponiveis.add(new Fruta(1, "Laranja"));
        frutasDisponiveis.add(new Fruta(2, "Manga"));
        frutasDisponiveis.add(new Fruta(3, "Uva"));
        frutasDisponiveis.add(new Fruta(4, "Maçã"));
        frutasDisponiveis.add(new Fruta(5, "Banana"));
        frutasDisponiveis.add(new Fruta(6, "Goiaba"));

        clientes = new ArrayList<>();
    }

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String nome = request.getParameter("nome");
        String[] frutasSelecionadas = request.getParameterValues("frutas");

        Cliente cliente = new Cliente(nome);

        if (frutasSelecionadas != null) {
            for (String idStr : frutasSelecionadas) {
                int id = Integer.parseInt(idStr);
                for (Fruta f : frutasDisponiveis) {
                    if (f.getId() == id) {
                        cliente.adicionarFruta(f);
                    }
                }
            }
        }

        clientes.add(cliente);

        response.setContentType("text/html;charset=UTF-8");
        PrintWriter out = response.getWriter();

        out.println("<h1>Lista de Clientes e Frutas</h1>");
        for (Cliente c : clientes) {
            out.println("<h3>" + c.getNome() + "</h3>");
            out.println("<ul>");
            for (Fruta f : c.getFrutas()) {
                out.println("<li>" + f.getNome() + "</li>");
            }
            out.println("</ul>");
        }

        out.println("<br><a href=\"frutas.html\">Voltar</a>");
    }
}

}
